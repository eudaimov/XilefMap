{
    "name": "my-electron-app",
    "version": "1.0.0",
    "description": "Programa para la lectura y creación de archivos GPX",
    "main": "main.js",
    "author": "Félix García Sánchez",
    "license": "MIT",
    "dependencies": {
        "bluebird": "^3.7.2",
        "leaflet": "^1.9.4",
        "leaflet-gpx": "^2.2.0",
        "pinia": "^3.0.2",
        "vue": "^3.5.13",
        "vue-router": "^4.5.1"
    },
    "devDependencies": {
        "@electron-forge/publisher-github": "^7.8.0",
        "@vitejs/plugin-vue": "^5.2.3",
        "cross-env": "^7.0.3",
        "electron": "^35.2.1",
        "eslint": "^8.57.1",
        "semistandard": "^17.0.0",
        "vite": "^6.3.3"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development vite",
        "build": "vite build",
        "serve": "vite preview",
        "start": "cross-env NODE_ENV=development electron .",
        "win": "npx electron-builder --win",
        "linux": "npx electron-builder --linux",
        "publicGitHub": "$env:GITHUB_TOKEN=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 npx electron-forge publish --verbose"
    },
    "build": {
        "appId": "com.xilefmap.electron",
        "productName": "XilefMap",
        "directories": {
            "output": "out"
        },
        "files": [
            "dist/**/*",
            "public/**/*",
            "main.js",
            "preload.js",
            "package.json"
        ],
        "win": {
            "target": "nsis",
            "icon": "icono.ico"
        },
        "nsis": {
            "oneClick": true,
            "perMachine": true,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": false,
            "installerIcon": "icono.ico",
            "uninstallerIcon": "icono.ico",
            "uninstallDisplayName": "XilefMap"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "icono.png"
        }
    }
}
